<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.FixtureFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menuPpal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo_celeste"
        android:orientation="vertical"
        tools:context=".Activity.PrincipalActivity">

    <!-- Contenido -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@color/fondo_gris_boton"
        android:gravity="center"
        android:text="FIXTURE"
        android:textColor="@color/letras_y_titulos"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vpFechas"
            android:layout_width="320dp"
            android:layout_height="349dp"
            android:layout_gravity="center"
            android:background="@color/fondo_TP_Eq_Fix" />


    </LinearLayout>
</FrameLayout>