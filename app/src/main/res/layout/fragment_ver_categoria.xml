<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerCategoriaFragment">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_celeste"
    android:orientation="vertical"
    tools:context=".VerCategoriaFragment">


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="60dp"
        android:background="@color/fondo_gris_boton"
        android:gravity="center"
        android:textColor="@color/letras_y_titulos"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEqui"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bordes_botones"
        android:text="SEGUÃ TUS EQUIPOS"
        android:textColor="@color/fondo_toolbar_y_letras_botones"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnFix"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bordes_botones"
        android:text="FIXTURE"
        android:textColor="@color/fondo_toolbar_y_letras_botones"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPosiciones"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bordes_botones"
        android:text="TABLA DE POSICIONES"
        android:textColor="@color/fondo_toolbar_y_letras_botones"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout></FrameLayout>