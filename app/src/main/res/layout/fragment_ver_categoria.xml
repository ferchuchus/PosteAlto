<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_celeste"
    android:orientation="vertical"
    tools:context=".VerCategoriaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@color/fondo_toolbar_y_letras_botones"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogoPoste"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:foregroundGravity="center_vertical"
            android:src="@mipmap/poste_alto_logo" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="47dp"
            android:layout_height="41dp"
            android:foregroundGravity="center"
            android:src="@mipmap/menu" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:background="@color/fondo_gris_boton"
            android:gravity="center"
            android:text="LIGA PARANAENSE A"
            android:textColor="@color/letras_y_titulos"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bordes_botones"
            android:text="SEGUÃ TUS EQUIPOS"
            android:textColor="@color/fondo_toolbar_y_letras_botones"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bordes_botones"
            android:text="FIXTURE"
            android:textColor="@color/fondo_toolbar_y_letras_botones"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bordes_botones"
            android:text="TABLA DE POSICIONES"
            android:textColor="@color/fondo_toolbar_y_letras_botones"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>