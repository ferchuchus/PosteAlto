<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <!-- Toolbar personalizada -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/menuPpal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo_celeste"
        android:orientation="vertical"
        tools:context=".PrincipalActivity">

       <!-- Contenido -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="325dp"
                android:layout_height="237dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/noticia1" />

            <Button
                android:id="@+id/btnCatA"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/bordes_botones"
                android:text="Categoría A"
                android:textColor="@color/fondo_toolbar_y_letras_botones"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCatB"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/bordes_botones"
                android:text="Categoría B"
                android:textColor="@color/fondo_toolbar_y_letras_botones"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnCatC"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/bordes_botones"
                android:text="Categoría C"
                android:textColor="@color/fondo_toolbar_y_letras_botones"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blanco"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/publicidadCH"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/pubblicidad1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="FULL NATIVE"
                android:textColor="@color/letras_y_titulos"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>