<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_celeste"
    android:fitsSystemWindows="true"
    tools:context=".MenuActivity">

    <!-- Layout real de la actividad -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/contenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondo_celeste"
        android:orientation="vertical"
        tools:context=".MenuActivity">

        <!-- Toolbar personalizada -->
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <!-- Actividad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="325dp"
                android:layout_height="237dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/noticia1"/>

            <Button
                android:id="@+id/btnCatA"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/bordes_botones"
                android:text="Categoría A"
                android:textColor="@color/fondo_toolbar_y_letras_botones"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/bordes_botones"
                android:text="Categoría B"
                android:textColor="@color/fondo_toolbar_y_letras_botones"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:background="@drawable/bordes_botones"
                android:text="Categoría C"
                android:textColor="@color/fondo_toolbar_y_letras_botones"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blanco"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/publicidadCH"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/pubblicidad1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="FULL NATIVE"
                android:textColor="@color/letras_y_titulos"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Layout del menú lateral (Navigation View) -->
    <android.support.design.widget.NavigationView
        android:id="@+id/navview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/fondo_celeste"
        android:fitsSystemWindows="true"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:touchscreenBlocksFocus="false"
        app:headerLayout="@layout/menu_encabezado"
        app:itemTextColor="@color/letras_y_titulos"
        app:menu="@menu/menu_opciones"
        app:itemTextAppearance="@color/letras_y_titulos"
        app:itemIconTint="@color/letras_y_titulos">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>