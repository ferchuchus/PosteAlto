<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo_TP_Eq_Fix">

    <TextView
        android:id="@+id/txtFechaHora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="03-07-2018 - 21:00"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo_TP_Eq_Fix"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivEquipo1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/recreativo_a" />

        <TextView
            android:id="@+id/txtRdo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtRdo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="103"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivEquipo2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/recreativo_a" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondo_TP_Eq_Fix">

        <TextView
            android:id="@+id/txtEquipo1"
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="left|center"
            android:text="Recreativo A"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtClub"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Club UniÃ³n"
            android:textColor="@color/letras_Tabla"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtEquipo2"
            android:layout_width="60dp"
            android:layout_height="29dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:gravity="right|center"
            android:text="Recreativo B"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>