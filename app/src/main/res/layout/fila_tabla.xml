<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fondo_TP_Eq_Fix">

    <!--TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fondo_TP_Eq_Fix"
        android:text="                EQUIPO                   PG    PP      TF       TC       D"
        android:textColor="@color/letras_y_titulos"
        android:textStyle="bold" /-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imImagen"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:src="@mipmap/recreativo_a" />

        <TextView
            android:id="@+id/tvEquipo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:text="Recreativo A"
            android:textColor="@color/letras_Tabla"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPG"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:gravity="center_horizontal"
            android:text="15"
            android:textColor="@color/letras_Tabla"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPP"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:gravity="center_horizontal"
            android:text="15"
            android:textColor="@color/letras_Tabla"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTF"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:gravity="center_horizontal"
            android:text="5555"
            android:textColor="@color/letras_Tabla"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTC"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:gravity="center_horizontal"
            android:text="5555"
            android:textColor="@color/letras_Tabla"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvD"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="-555"
            android:textColor="@color/letras_Tabla"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
